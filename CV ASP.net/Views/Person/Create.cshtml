@using CV_ASP.net.Tools
@model CV_ASP.net.Models.PersonForm
@inject SessionManager _session
@{
    ViewData["Title"] = "Create";
}
@*<p>Bonjour : @ViewContext.HttpContext.Session.GetString("ScreenName")</p>*@
<p>Welcome @_session.CurrentUser?.ScreenName</p>
<h1>Create</h1>

<h4>Personal Info Form</h4>
