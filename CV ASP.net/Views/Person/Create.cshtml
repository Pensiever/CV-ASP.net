            </div>
            <div class="form-group">
                <label asp-for="SecondFault" class="control-label"></label>
                <input asp-for="SecondFault" class="form-control" />
                <span asp-validation-for="SecondFault" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThirdFault" class="control-label"></label>
                <input asp-for="ThirdFault" class="form-control" />
                <span asp-validation-for="ThirdFault" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastDegree" class="control-label"></label>
                <input asp-for="LastDegree" class="form-control" />
                <span asp-validation-for="LastDegree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if(!string.IsNullOrWhiteSpace(ViewBag.Error))
{
    <span class="text-danger">@ViewBag.error</span>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}