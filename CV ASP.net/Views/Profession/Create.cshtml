@using CV_ASP.net.Tools
@model CV_ASP.net.Models.ProfessionForm
@inject SessionManager _session
@{
    ViewData["Title"] = "Create";
}
@*<p>Bonjour : @ViewContext.HttpContext.Session.GetString("ScreenName")</p>*@
<p>Welcome @_session.CurrentUser?.ScreenName</p>
<h1>Create</h1>

<h4>Professional Experience Form</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="PeriodBegin" class="control-label"></label>
                <input asp-for="PeriodBegin" class="form-control" />
                <span asp-validation-for="PeriodBegin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeriodEnd" class="control-label"></label>
                <input asp-for="PeriodEnd" class="form-control" />
                <span asp-validation-for="PeriodEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employer" class="control-label"></label>
                <input asp-for="Employer" class="form-control" />
                <span asp-validation-for="Employer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CVId" class="control-label"></label>
                <select class="form-control" asp-for="CVId" asp-items="@(new SelectList(Model.CVList, "Id", "Id"))">
                    <option>--Faites votre choix--</option>
                </select>
                <span asp-validation-for="CVId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if(!string.IsNullOrWhiteSpace(ViewBag.Error))
{
    <span class="text-danger">@ViewBag.error</span>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}